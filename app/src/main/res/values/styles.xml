<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--MY THEMES-->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColor">@color/background_gray</item>
        <item name="android:textColorHint">@color/background_gray</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/background_gray</item>
        <item name="startIconTint">@color/background_gray</item>
        <item name="fontFamily">@font/regular</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/error</item>
    </style>

    <style name="CustomTextInputPassword" parent="CustomTextInput">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/background_gray</item>
    </style>
    <!--MY THEMES END.-->

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/background_red</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="rippleColor">@color/background_white</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/background_white</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
